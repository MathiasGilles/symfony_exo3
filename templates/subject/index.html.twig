{% extends 'base.html.twig' %}

{% block title %}Matières{% endblock %}

{% block body %}

<h1>Matières</h1>

<a class="btn btn-primary" href="{{path('subject_new')}}">Créer une matière</a>

<br><br>

<table class="table">
    <thead>
        <tr>
            <td>Matières</td>
            <td>Coefficient</td>
            <td>Action</td>
        </tr>
    </thead>
    <tbody>
        {% for subject in subjects %}
        <tr>
            <td>{{subject.name}}</td>
            <td>{{subject.coefficient}}</td>
            <td><a class="btn btn-primary" href="{{path('subject_detail', {id:subject.id})}}"><i class="fas fa-info"></i></a></td>
        </tr>
        {% endfor %}
    </tbody>
</table>

{% endblock %}
