{% extends 'base.html.twig' %}

{% block title %}Notes{% endblock %}

{% block body %}

<h1>Notes</h1>

<a class="btn btn-primary" href="{{path('note_new')}}">Ajouter une note</a>

<br><br>

<table class="table">
    <thead> 
        <tr>
            <td>Matières</td>
            <td>Note</td>
            <td>Coeff</td>
            <td>Ajouté le</td>
        </tr>
    </thead>
    <tbody>
        {% for note in notes %}
            <tr>
                <td>{{note.subject.name}}</td>
                <td>{{note.value}}</td>
                <td>{{note.subject.coefficient}}</td>
                <td>{{note.createdAt|date("d/m/Y à h:i:s")}}</td>
            </tr>
        {% endfor %}
    </tbody>
</table>
{% endblock %}
